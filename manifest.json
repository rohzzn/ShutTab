{
  "manifest_version": 3,
  "name": "Focus Blocker \u2013 Free Site Blocker",
  "version": "1.0.0",
  "default_locale": "en",
  "description": "A free, privacy-friendly site blocker with schedules, soft/hard block, and temporary overrides. All local, no tracking.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Blocker"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "alarms",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "block.html",
        "block.js",
        "block.css",
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}